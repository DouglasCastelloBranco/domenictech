<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="749dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:text="Perfil"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Completo"
            android:labelFor="@+id/txt_nome_edit"
            android:layout_marginTop="30dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txt_nome_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F8FAFC" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:labelFor="@+id/txt_data_edit"
            android:text="Data de Nascimento"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txt_data_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F8FAFC" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:labelFor="@+id/celular_edit"
            android:text="Celular"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/celular_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F8FAFC" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="E-mail"
            android:labelFor="@+id/email_edit"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/email_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F8FAFC" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:labelFor="@+id/senha_edit"
            android:text="Senha"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/senha_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F8FAFC"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#808080"
            android:text="Editar" />

        <Button
            android:id="@+id/btn_deletar_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="#00FFFFFF"
            android:text="@string/confirmar_deletar"
            android:textColor="@color/black" />
    </LinearLayout>

</FrameLayout>
